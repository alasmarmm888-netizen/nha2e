async def handle_admin_commands(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """Ù…Ø¹Ø§Ù„Ø¬Ø© Ø£ÙˆØ§Ù…Ø± Ø§Ù„Ø£Ø¯Ù…Ù† ÙÙŠ Ø§Ù„Ù‚Ù†Ø§Ø©"""

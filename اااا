    app.post_init = send_initial_panel

    print("ğŸ‰ Ø§Ù„Ø¨ÙˆØª Ø´ØºØ§Ù„ Ø§Ù„Ø¢Ù†!")
    app.run_polling(drop_pending_updates=True)


                await send_daily_report()

            # Ø§Ù„ØªÙ‚Ø±ÙŠØ± Ø§Ù„Ø³Ø§Ø¹ÙŠ
            if now.minute == 0:
                await send_hourly_report()

            await asyncio.sleep(60)
        except Exception as e:
            logger.error(f"âŒ Ø®Ø·Ø£ ÙÙŠ Ø§Ù„Ø¬Ø¯ÙˆÙ„Ø©: {e}")
            await asyncio.sleep(60)

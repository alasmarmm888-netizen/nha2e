            if len(parts) == 2:
                user_id, amount = parts
                # ØªØ­ÙˆÙŠÙ„ Ù„Ø£Ù…Ø± addprofit
                context.args = [user_id, amount]
                await handle_add_profit(update, context)
            else:
                await update.message.reply_text("âŒ ØµÙŠØºØ© Ø®Ø§Ø·Ø¦Ø©. Ù…Ø«Ø§Ù„: 763916290 150")

            # Ù…Ø³Ø­ Ø­Ø§Ù„Ø© Ø§Ù„Ø§Ù†ØªØ¸Ø§Ø±
            context.user_data.pop('awaiting_profit_data', None)


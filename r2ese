async def handle_channel_commands(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """Ù…Ø¹Ø§Ù„Ø¬Ø© Ø£ÙˆØ§Ù…Ø± Ø§Ù„Ù‚Ù†Ø§Ø© ÙÙ‚Ø·"""
    if str(update.effective_chat.id) != ADMIN_CHAT_ID:
        return

    # âš ï¸ ØªØ­Ù‚Ù‚ Ù…Ù† update.message
    if not update.message or not update.message.text:
        return  # â¬…ï¸ Ø§Ø®Ø±Ø¬ Ø¥Ø°Ø§ Ù…Ø§ ÙÙŠ Ø±Ø³Ø§Ù„Ø©

    if update.message.text == "/panel":
        await send_admin_panel_to_channel(context)

    elif update.message.text.startswith("/addprofit"):
        await handle_add_profit(update, context)

    return  # â¬…ï¸ Ø±Ø¬Ø¹ Ø¯Ø§Ø¦Ù…Ø§Ù‹
async def admin_pending_requests(update: Update, context: ContextTypes.DEFAULT_TYPE):
    """Ø¹Ø±Ø¶ Ø·Ù„Ø¨Ø§Øª Ø§Ù„Ø§Ù†ØªØ¸Ø§Ø±"""
    query = update.callback_query
    await query.answer()

    # Ø¬Ù„Ø¨ Ø·Ù„Ø¨Ø§Øª Ø§Ù„Ø§Ù†ØªØ¸Ø§Ø± Ù…Ù† Ù‚Ø§Ø¹Ø¯Ø© Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª
    conn = sqlite3.connect('trading_bot.db', check_same_thread=False)
    c = conn.cursor()
    c.execute("SELECT * FROM transactions WHERE status = 'pending'")
    pending_requests = c.fetchall()
    conn.close()

    if pending_requests:
        text = "ğŸ“‹ Ø·Ù„Ø¨Ø§Øª Ø§Ù„Ø§Ù†ØªØ¸Ø§Ø±:\n\n"
        for req in pending_requests:
            text += f"ğŸ†” {req[1]} | ğŸ’° {req[3]} USDT | ğŸ“ {req[2]}\n"
    else:
        text = "âœ… Ù„Ø§ ØªÙˆØ¬Ø¯ Ø·Ù„Ø¨Ø§Øª ÙÙŠ Ø§Ù„Ø§Ù†ØªØ¸Ø§Ø±"

    keyboard = [[InlineKeyboardButton("ğŸ”™ Ø±Ø¬ÙˆØ¹", callback_data="admin_stats")]]
    reply_markup = InlineKeyboardMarkup(keyboard)

    await query.edit_message_text(text, reply_markup=reply_markup)

async def scheduler_background():
    """Ø¬Ø¯ÙˆÙ„Ø© Ø¨Ø³ÙŠØ·Ø© ÙÙŠ Ø§Ù„Ø®Ù„ÙÙŠØ©"""
    while True:
        try:
            now = datetime.now()

            # Ø§Ù„ØªÙ‚Ø±ÙŠØ± Ø§Ù„ÙŠÙˆÙ…ÙŠ Ø§Ù„Ø³Ø§Ø¹Ø© 8:00
